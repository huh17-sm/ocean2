        "display": {
          "name": "PPSupplySans",
          "fallback": "sans-serif",
          "usage": "Large headings, hero titles"
        },
        "decorative": {
          "name": "Rock Salt",
          "fallback": "cursive",
          "usage": "Special decorative elements"
        }
      },
      "fontSizes": {
        "xs": {
          "value": "11px",
          "rem": "0.6875rem",
